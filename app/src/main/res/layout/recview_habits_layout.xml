<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:colorBackground"
        android:descendantFocusability="blocksDescendants">

        <Button
            android:id="@+id/habits_list_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:background="@drawable/ic_btn_act_done" />

        <TextView
            android:id="@+id/habits_list_name"
            android:layout_width="190dp"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:gravity="center|left"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/habits_list_streak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="45dp"
            android:text="Streak: 3"
            app:autoSizeTextType="uniform"/>

        <TextView
            android:id="@+id/habits_list_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_toStartOf="@+id/habits_list_btn"
            android:layout_toLeftOf="@+id/habits_list_btn"
            android:text="Medium"
            android:textColor="#A4CF5418" />

        <TextView
            android:id="@+id/habits_list_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="45dp"
            android:text="Best : 12"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/habits_list_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="155dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="45dp"
            android:text="All: 100/100"
            app:autoSizeTextType="uniform" />

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="?android:attr/listDivider" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>